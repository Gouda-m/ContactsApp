<Window x:Class="ContactApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContactApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel VerticalAlignment="Center" Margin="10">
                <TextBlock Text="Search" />
                <TextBox x:Name="searchTextBox"
                         TextChanged="searchTextBox_TextChanged"/>
            </StackPanel>
            <ListView x:Name="contactsListView" Margin="10" Height="300" HorizontalContentAlignment="Stretch" d:ItemsSource="{d:SampleData ItemCount=5}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="6*"/>
                                <ColumnDefinition Width="4*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="20"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Text="{Binding Name}"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       VerticalAlignment="Top"
                                       Grid.Column="0"
                                       Grid.RowSpan="2"/>
                            <TextBlock Text="{Binding Email}"
                                       FontSize="12"
                                       Foreground="DarkCyan"
                                       Grid.Column="1"
                                       Grid.Row="0"/>
                            <TextBlock Text="{Binding Phone}"
                                       FontSize="12"
                                       FontStyle="Italic"
                                       Grid.Column="1"
                                       Grid.Row="1"/>
                            <Button x:Name="editButton" 
                                    Click="editButton_Click"
                                    Content="⋮"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Foreground="DarkCyan"
                                    Grid.Column="2"
                                    Margin="2,8,2,8"
                                    FontSize="14"
                                    Grid.RowSpan="2"/>
                            <Button x:Name="deleteButton" 
                                    Click="deleteButton_Click"
                                    Content="x"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Foreground="DarkRed"
                                    Grid.Column="3"
                                    Margin="2,8,2,8"
                                    FontSize="14"
                                    Grid.RowSpan="2"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Button x:Name="addContactButton" Content="add contact" Margin="10" Click="addContactButton_Click" HorizontalAlignment="Right" Width="150" Background="DarkCyan" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
